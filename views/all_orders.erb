<h2>All orders of Pizza Shop!</h2>

<table class="table table-striped" width="80%" >
		<thead>
		  	<col width="50">
			<tr>
				<th> Id </th>
				<th> Name </th>
				<th> Phone </th>
				<th> Address </th>
				<th> List </th>
			<tr>
		</thead>
		<tbody>

		<% @a ||= {} %>
		<% @a.each do |order| %>
			<tr>
				<td><%= order.id %></td>
				<td><%= order.name %></td>
				<td><%= order.phone %></td>
				<td><%= order.address %></td>
				<td><%= order.list %></td>
			</tr>	
		<% end %>	
	</tbody>
</table>