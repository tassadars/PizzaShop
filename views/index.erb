<h2>Welcome to Pizza Shop!</h2>


<div class="container">
	<div class="row">
		<% @products.each do |p| %>
	  		<div class="col-xs-12 col-sm-6 col-md-4">
	  			<div>
	  				<%= p.title %>	
	  			</div>

	  			<div>
	  				<img src="<%= p.path_to_image%>" alt="Pizza view">
	  			</div>

	  			<div>
	  				<%= p.description %> 	  			
	  			</div>	

	  			<div>
	  				Size: <%= p.size %> cm  			
	  			</div>	  			

	  			<div>
	  				Price: <%= p.price %> rub	  			
	  			</div>

	  			<div>
	  				Ordered count: 
	  				<script type="text/javascript">
	  					document.write(get_product_count(<%= p.id %>))
	  				</script>	  			
	  			</div>

	  			<div>
	  				<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)" >Add to cart</button>
	  			</div>
	  		</div>
		<% end %>
	</div>
</div>

<button class="btn btn-primary" onclick="get_total_product_count()">Click me!</button>

<script type="text/javascript">
	$(function() {
		move_orders_to_input();
		update_orders_button();
	});
</script>