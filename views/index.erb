<h2>Welcome to Pizza Shop!</h2>


<div class="container">
	<div class="row">
		<% @products.each do |p| %>
	  		<div class="col-xs-12 col-sm-6 col-md-4">
	  			<%= p.title %>	
	  			</br>
	  			<img src="<%= p.path_to_image%>" alt="Pizza view">
	  			</br>
	  			Size: <%= p.size%>, Price: <%= p.price%>	  			
	  		</div>
		<% end %>
	</div>
</div>




<button class="btn btn-primary" onclick="something()">Click me!</button>

