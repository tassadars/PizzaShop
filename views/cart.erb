<h2>Список заказов</h2>

<form action= "/order" method="post" role="form">

<table class="table table-striped" width="80%" >
		<thead>
		  	<col width="50">
			<tr>
				<th> Id </th>
				<th> Title </th>
				<th> Size </th>
				<th> Price per piece </th>
				<th> Quantity </th>
			<tr>
		</thead>
		<tbody>
		<% total = 0 %>
		<% list = '' %>		
		<% @items ||= {} %>
		<% @items.each do |key, val| %>
			<tr>
				<td><%= key.id %></td>
				<td><%= key.title %></td>
				<td><%= key.size %> cm</td>
				<td><%= key.price %> rub</td>
				<td><%= val %></td>
			</tr>	
			<% total += key.price*val.to_i %>
			<% list = list + ' ' + key.title + '(' + val + ');' %>		
		<% end %>	
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td> 
			<td align='right'>  
			Total price: <%= total%> rub
			</td>
		</tr>	
	</tbody>
</table>
<input id="orders_input" name="orders" type="text" value="<%= list %>">
<button type="submit" class="btn btn-primary btn-lg btn-block">Перейти к оплате</button>
</form>