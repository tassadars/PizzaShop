<h2>Список заказов</h2>

<form action= "/order" method="POST" role="form">

<table class="table table-striped" width="80%" >
		<thead>
		  	<col width="50">
			<tr>
				<th> Id </th>
				<th> Title </th>
				<th> Size </th>
				<th> Price per piece </th>
				<th> Quantity </th>
			<tr>
		</thead>
		<tbody>
		<% total = 0 %>
		<% @res.each do |key, val| %>
			<% @products.each do |p| %>
				<% if p.id === key.to_i %>
					<tr>
						<td><%= p.id %></td>
						<td><%= p.title %></td>
						<td><%= p.size %> cm</td>
						<td><%= p.price %> rub</td>
						<td><%= val %></td>
					</tr>	
					<% total += p.price*val.to_i %>
				<% end %>
			<% end %>	
		<% end %>	
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td> 
			<td align='right'>
			Total price: <%= total%> rub
			</td>
		</tr>	
	</tbody>
</table>

<button type="submit" class="btn btn-primary btn-lg btn-block">Submit order!</button>
</form>